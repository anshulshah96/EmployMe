<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/backgroundmain">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:id="@+id/Header"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="#4444ff"

            android:paddingLeft="100dip"
            android:paddingTop="25dip"
            android:text="@string/Heading"
            android:textSize="25sp"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:id="@+id/MainLogo"
            android:background="@drawable/mainlogo"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/HireInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/MainLogo"
                android:background="#55FFFFFF"

                android:text="@string/HireInfo"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginTop="90dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip" />

            <TextView
                android:id="@+id/Topic"
                android:layout_width="120dip"
                android:layout_height="wrap_content"
                android:layout_below="@id/HireInfo"

                android:layout_marginTop="5dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"

                android:text="@string/HireTopic"
                android:textSize="22sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/TopicField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/HireInfo"
                android:layout_toRightOf="@id/Topic"
                android:layout_alignParentRight="true"

                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"

                android:padding="5sp"
                android:inputType="textCapWords"
                android:textSize="20sp"
                android:background="#DDDDDD" />

            <TextView
                android:id="@+id/Description"
                android:layout_width="120dip"
                android:layout_height="wrap_content"
                android:layout_below="@id/Topic"

                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"

                android:text="@string/HireDescription"
                android:textSize="22sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/DescriptionField"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:layout_below="@+id/TopicField"
                android:layout_toRightOf="@id/Description"

                android:layout_marginTop="0dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"

                android:padding="5sp"
                android:inputType="textMultiLine|textCapSentences"
                android:textSize="20sp"
                android:background="#DDDDDD" />

            <TextView
                android:id="@+id/InitialBid"
                android:layout_width="120dip"
                android:layout_height="wrap_content"
                android:layout_below="@id/Description"

                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"

                android:text="@string/HireInitialBid"
                android:textSize="22sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/InitialBidField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/DescriptionField"
                android:layout_toRightOf="@id/InitialBid"
                android:layout_alignParentRight="true"

                android:layout_marginTop="0dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"

                android:padding="5sp"
                android:inputType="phone"
                android:textSize="20sp"
                android:background="#DDDDDD" />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/InitialBid"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dip"
            android:background="#77FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Select Category:"
                android:textSize="22sp"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/spinners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/map"
                android:layout_margin="20dip"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="#F8650D"
                android:text="Location"/>


            <Button
                android:id="@+id/HirePost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/HirePost"

                android:layout_margin="20dip"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="#F8650D"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />


        </LinearLayout>

    </RelativeLayout>
</ScrollView>
